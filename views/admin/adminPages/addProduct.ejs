<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Adding Product</h1>
</div>
<form action="/addproduct" method="POST" enctype="multipart/form-data">
    <div class="container" style="margin-top: 8%;">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-image"></i></span>
            </div>
            <div class="custom-file form-group col-md-7">
                <input type="file" required accept="image/*" name="image" class="custom-file-input" id="file">
                <label class="custom-file-label" for="file">Sample photos</label>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="name">Name</label>
                <input type="text" required class="form-control" id="name" name="name">
            </div>
            <div class="form-group col-md-2">
                <label for="price">Price</label>
                <input type="number" required class="form-control" name="price" id="price">
            </div>

            <div class="form-group col-md-2">
                <label for="name">Brand</label>
                <select class="custom-select" name="brand" id="brand">
                  <option selected>Nike</option>
                  <option value="Adidas">Adidas</option>
                  <option value="Puma">Puma</option>
                  <option value="Fila">Fila</option>
                  <option value="Vans">Vans</option>
                  <option value="Converse">Converse</option>
                  <option value="Under Armour">Under Armour</option>
                </select>
            </div>

            <div class="form-group  col-md-2">
                <label for="stock">Total Stock</label>
                <input type="number" required class="form-control" id="stock" name="stock">
            </div>
        </div>

        <div class="form-row">

            <div class="form-group col-md-2">
                <label for="colors">Available Colors</label>
                <select class="custom-select" id="color" name="color">
                    <option selected>Red</option>
                    <option value="Blue">Blue</option>
                    <option value="Green">Green</option>
                    <option value="Yellow">Yellow</option>
                    <option value="Orange">Orange</option>
                    <option value="Purple">Purple</option>
                    <option value="White">White</option>
                    <option value="Black">Black</option>
                </select>
            </div>


            <div class="form-group col-md-2">
                <label for="sizes">Available Sizes</label>
                <select class="custom-select" id="sizes" name="size">
                    <option selected>S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                </select>
            </div>

        </div>
        <button type="submit" href="" id="addProductBtn" class="btn btn-success" role="button">Add Product</button>
    </div>
</form>
</div>